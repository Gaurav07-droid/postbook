extends base

block content
    .reviews
        div.container-userCard
            each following in followings
                .user-profile-card
                    .profile-follower
                        img.user-avatar(src=`/img/userProfile/${following.following.profileImage}`, alt="user profile", height="150px", width="150px")
                        h1.user-nameContainer(href='/')= following.following.username
                        h1.user-about= following.following.about
                        a#btn_following(href=`/api/v1/user/${following.following._id}` ) view profile

